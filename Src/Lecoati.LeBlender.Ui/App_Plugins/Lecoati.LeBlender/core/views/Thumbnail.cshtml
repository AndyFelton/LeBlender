@model dynamic
@using Umbraco.Web.Templates
@using Lecoati.LeBlender.Extension

@if (Model.value != null)
{
    <div id="thumbnail-generic" class="row">
        @foreach (var item in Model.value)
        {
            var content = Helper.GetFirstContent(item.content);
            var link = content != null ? content.Url : "#";
            <div class="col-xs-12 col-md-6 col-lg-3">
                <div class="thumbnail">
                    <img src="@(item.image.value.ToString() != "" ? item.image.value : "http://lorempixel.com/1200/600/sports/" + (Model.value.IndexOf(item) + 1))" alt="@item.title.value">
                    <div class="caption">
                        <h3>@item.title.value</h3>
                        <p>@item.summary.value</p>
                        <p><a href="@link" class="btn btn-primary" role="button">Button</a></p>
                    </div>
                </div>
            </div>
        }
    </div>
}
